
@{
    ViewData["Title"] = "Ads Payment";
}

@model Post

<link rel="stylesheet" href="~/css/AdsPayment.css" asp-append-version="true" />

<section>
    <div class="container">

    <form method="post" asp-controller="Post" asp-action="Ads">

        <div class="row">

            <div class="col">

                <h1>@Model.Title</h1>

                <h3 class="title">billing address</h3>

                <div class="inputBox">
                    <span>full name :</span>
                    <input type="text" name="fullName" placeholder="John Deo">
                </div>
                <div class="inputBox">
                    <span>email :</span>
                    <input type="email" name="email" placeholder="example@example.com">
                </div>
                <div class="inputBox" hidden>
                    <span>Id Post :</span>
                    <input type="number" name="PostId" value="@Model.PostId" readonly placeholder="#123">
                </div>
                <div class="inputBox">
                    <span>How many people  :</span>
                    <input type="number" name="HowManyPeople" placeholder="1 2 3 4">
                </div>

                <div class="flex">
                    <div class="inputBox">
                        <span>Price :</span>
                        <input type="number" name="Price" placeholder="Euro">
                    </div>
                    <div class="inputBox">
                        <span>Days :</span>
                        <input type="number" name="Days" placeholder="Days">
                    </div>
                </div>

            </div>

            <div class="col">

                <h3 class="title">payment</h3>

                <div class="inputBox">
                    <span>cards accepted :</span>
                    <img src="~/Assets/Images/card_img.png" alt="">
                </div>
                <div class="inputBox">
                    <span>name on card :</span>
                    <input type="text" name="NameOnCard" placeholder="Mr. John Deo">
                </div>
                <div class="inputBox">
                    <span>credit card number :</span>
                    <input type="number" name="CreditCardNumber" placeholder="1111-2222-3333-4444">
                </div>
                <div class="inputBox">
                    <span>exp month :</span>
                    <input type="text" name="ExpMonth" placeholder="january">
                </div>

                <div class="flex">
                    <div class="inputBox">
                        <span>exp year :</span>
                        <input type="number" name="ExpYear" placeholder="2022">
                    </div>
                    <div class="inputBox">
                        <span>CVV :</span>
                        <input type="text" name="CVV" placeholder="1234">
                    </div>
                </div>

            </div>
    
        </div>

        <input type="submit" value="Total Payment:     0Euro" class="TotalPayment-btn">
        <input type="submit" value="proceed to checkout" class="submit-btn">

    </form>

</div>    
</section>
