@model IEnumerable<Broker.Models.Post>
@{
    ViewBag.Title = "Home";
}


<link href="@Url.Content("~/css/UserPostPage.css")" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="container">
    <div class="row">

        @foreach (var post in @Model)
        {

            if (post.IsSponsored == true)
            {
            <div class="col-4">

                <article class="post-card">
                    <div class="post-card-img">
                        <img src="~/Assets//Images/grid1.jpg" />
                    </div>
                    <div class="post-card-info">

                        <div class="post-card-info-address">

                            <h3>@post.Country</h3>
                            <p>@post.City</p>
                            <hr />
                            <h3>@post.Title</h3>
                            <p>@post.Description</p>
                            <hr />
                            <div class="post-price-btns">
                                <h3>$@post.Price</h3>

                            </div>
                            <div class="btns">
                                <a href="#" class="btn btn-outline-primary">View Details</a>
                                <button class="btn btn-success" disabled><i class="bi bi-coin"></i> | Sponsored Post</button>

                            </div>
                        </div>
                    </div>
                </article>
            </div>
            }
        }

    </div>
</div>
