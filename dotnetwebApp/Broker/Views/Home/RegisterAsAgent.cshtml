@model Broker.ViewModels.RegisterAgentViewModel 
@{
	ViewData["Title"] = "RegisterAsAgent";
}

<link href="@Url.Content("~/css/register-page.css")" rel="stylesheet" type="text/css" />
<style>
.hidden{
    display: none;
}
</style>


    <div class="container">

        <form method="post" autocomplete="off">
            <h2 id="registerHeader">Create Account</h2>

            <div class="form-outline mb-4">
            <label class="labels" asp-for="Name"></label>
            <input type="text" id="firstname" asp-for="Name" placeholder="Firstname" class="form-control form-control-lg">
            <span asp-validation-for="Name" class="text-danger"></span> 
            </div>

            <div class="form-outline mb-4">
            <label class="labels" asp-for="LastName"></label>
            <input type="text" id="lastname" asp-for="LastName" placeholder="Lastname" class="form-control form-control-lg">
            <span asp-validation-for="LastName" class="text-danger"></span> 
            </div>

            <div class="form-outline mb-4">
            <label class="labels" asp-for="Birthday"></label>
            <input type="date" id="birthday" asp-for="Birthday" class="form-control form-control-lg">
            <span asp-validation-for="Birthday" class="text-danger"></span> 
            </div>



            <div class="form-outline mb-4">
            <label class="labels" asp-for="Email"></label>
            <input type="text" id="email"  asp-for="Email" placeholder="Email" class="form-control form-control-lg">
            <span asp-validation-for="Email" class="text-danger"></span> 
            </div>

            <div class="form-outline mb-4">
            <label class="labels" asp-for="Password"></label>                        
            <input type="password" id="Password"  asp-for="Password" placeholder="Password*" class="form-control form-control-lg">
            <span asp-validation-for="Password" class="text-danger"></span> 
            </div>


            <div class="form-outline mb-4">
            <label class="labels" asp-for="Street"></label>
            <input type="text" id="street"  asp-for="Street" placeholder="Street" class="form-control form-control-lg">
            <span asp-validation-for="Street" class="text-danger"></span> 
            </div>

            <div class="form-outline mb-4">
            <label class="labels" asp-for="State"></label>
            <input type="text" id="state"  asp-for="State" placeholder="State" class="form-control form-control-lg">
            <span asp-validation-for="State" class="text-danger"></span> 
            </div>

            <div class="form-outline mb-4">
            <label class="labels" asp-for="City"></label>
            <input type="text" id="city"  asp-for="City" placeholder="City" class="form-control form-control-lg">
            <span asp-validation-for="City" class="text-danger"></span> 
            </div>


            <div class="form-outline mb-4">
            <label class="labels" asp-for="ZipCode"></label>
            <input type="number" id="zipCode"  asp-for="ZipCode" placeholder="ZipCode" class="form-control form-control-lg">
            <span asp-validation-for="ZipCode" class="text-danger"></span> 
            </div>

             <div class="form-outline mb-4">
              <p>Register as</p>
            <input type="radio"  asp-for="Type" class="type" value="SimpleUser">
            <label class="labels" asp-for="Type">Simple User</label>
            <input type="radio"  asp-for="Type" class="type" value="Agent">
             <label class="labels" asp-for="Type">Agent</label>
            <span asp-validation-for="Type" class="text-danger"></span> 
            </div>

            <div class="form-outline mb-4 hidden" id="agent-id">
            <label class="labels" asp-for="AgentId"></label>
            <input type="number" id="agentid"  asp-for="AgentId" placeholder="AgentId" class="form-control form-control-lg">
            <span asp-validation-for="AgentId" class="text-danger"></span> 
            </div>

            <input id="sumbit-btn" type="submit"  value="Create Account" class="btn btn-primary btn-lg btn-block">
        </form>
        </div>

        @section Scripts{ 
            @{ <partial name="_ValidationScriptsPartial"/>}
            <script>
           agentIdInput = document.getElementById('agent-id');
           document.querySelectorAll('.type').forEach(inp => {
               inp.addEventListener('change',e => {
                   if(e.target.value == "Agent"){
                       agentIdInput.classList.remove('hidden');
                   }else if(e.target.value == "SimpleUser"){
                       agentIdInput.classList.add('hidden');
                   }
               })
           })
            </script>
        }
