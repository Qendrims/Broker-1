@using Broker.Models

@using Microsoft.AspNetCore.Identity
  @inject Broker.Services.IUserService UserService
  @inject UserManager<User> _userManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Broker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/views/welcomePage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    @RenderSection("Styles",required:false) 
</head>
<body>
    <header>
        <div class="homepage-header" id="homepageHeader">
            <ul class="nav-list" id="list1">
                <li id="Home"><a href="/Home/Index">Home</a></li>
                <li id="AboutUs"><a href="/Home/AboutUs">AboutUs</a></li>
                <li id="Contact"><a href="/Home/ContactUs">Contact</a></li>

                <!-- shtohet login ose largohet -->
            </ul>

            <img src="~/Assets/Images/logo.jpg" alt="logo" />

            @if (!User.Identity.IsAuthenticated)
            {
            <ul class="nav-list" id="list2">
                <li ><a href="/Post/PostPage">Posts</a></li>
                <li ><a href="/Home/RegisterAsAgent">Sign Up</a></li>
                    <li ><a href="/Home/Login">Log In</a></li>
                </ul>
            } else
            {
                var userId = UserService.GetUserId();
                var user = _userManager.FindByIdAsync(userId).Result;

                <div class="dropdown">
                      <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                     <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                      <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                      </svg>
                     Welcome @user.Name
                     
                      </button>
                      <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                        <li><a class="dropdown-item active" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="/Post/Postpagecreate">Create Post</a></li>
                        <li><a class="dropdown-item" href="/Post/MyPosts">My posts</a></li>
                        <li><a class="dropdown-item" href="/Post/Postpage">All posts</a></li>
                        <li><a class="dropdown-item" href="/Post/ArchivedPosts">Archived posts</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li id="LogOut"><a class="dropdown-item" href="/Home/Logout">Log Out</a></li>
                      </ul>
                     </div>
             }
           
                @*<li id="Posts"><a href="/Post/PostPage">Posts</a></li>*@




            <!-- shtohet njw button ose nje list -->

        </div>
    </header>
    @RenderBody()


    <div class="homepage-footer">

        <div class="homepage-footer-grid">
            <div class="footer-grid section1">
                <p id="sectionFirstItem">About</p>
                <h1 class="sectionSecondItem">Broker App</h1>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempora quibusdam quasi, atque dolor laborum placeat magni! Voluptas ratione incidunt delectus quidem repellendus voluptate corrupti consequuntur, sapiente quisquam cum ut cupiditate.</p>
                <a href="#">Read more</a>
            </div>
            <div class="footer-grid section2">
                <p id="sectionFirstItem">Contact</p>
                <p>Broadway 10012, New York, NY, USA</p>
                <p>Call us FREE + (800) 990 8877</p>
                <p>broker@pbc.com</p>
                <a href="#">Contact us</a>
            </div>
            <div class="footer-grid section3">
                <p id="sectionFirstItem">Newsletter Sign Up</p>
                <input id="newsletterInput" type="email" placeholder="Enter your email">
                <button id="newsletterButton" type="submit">Submit</button>
            </div>
        </div>


        <div class="homepage-footer-box">
            <h3>Broker App</h3>
            <a href="#">Privacy terms and Conditions</a>
            <div class="icons">
                <i class="fab fa-facebook-square"></i>
                <i class="fab fa-instagram-square"></i>
                <i class="fab fa-twitter"></i>
                <i class="fab fa-linkedin-in"></i>
                <i class="fas fa-paper-plane"></i>
                <i class="fab fa-youtube"></i>
            </div>
            <p id="copyright">© Broker App | All rights reserved</p>
        </div>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    



    @RenderSection("Scripts", required: false)
</body>
</html>
